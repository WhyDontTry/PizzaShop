<h2>Содержимое корзины:</h2>

<div id="cart">
	<table class="table table-striped">
	<thead>
		<tr>
			<th scope="col">#</th>
			<th scope="col">Product</th>
			<th scope="col">Price</th>
			<th scope="col">Number</th>
		</tr>
	</thead>
	<tbody>
	<% total_price = 0 %>
	<% total_qty = 0 %>
		<% @items.each do |item| %>
			<tr>
				<th scope="col">#</th>
				<th scope="col"><%= item[0].title %></th>
				<th scope="col"><%= item[0].price %></th>
				<th scope="col"><%= item[1]%></th>
			</tr>
			<% total_price += item[0].price * item[1].to_i %>
			<% total_qty += item[1].to_i %>
		<% end %>

			<tr>
				<th scope="col">Total</th>
				<th scope="col"></th>
				<th scope="col"><%= total_price %> RUB</th>
				<th scope="col"><%= total_qty %></th>
			</tr>

	</tbody>
	</table>


	<form action="/place_order" method="POST" role="form">

		<input name="order[order_input]" type="hidden" value=<%= @orders_input %>/>

	<div class="form-group">
		<label>Name:</label>
		<input name="order[name]" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Your name">
	</div>

	<div class="form-group">
		<label>Phone</label>
		<input name="order[phone]" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Your phone" >
	</div>
	<div class="form-group">
		<label>Delivery Address</label>
		<textarea name="order[address]" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Delivery address"></textarea>
	</div>

		<button type="submit" class="btn btn-success">Place this order</button>
		<button class="btn btn-danger" onclick="return cancel_order()">Cancel</button>

	</form>

</div>